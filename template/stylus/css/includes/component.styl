// button style
.button
	vendor(appearance, none)
	border solid 1px rgba(0,0,0,0.2)
	vendor(border-radius, 4px)
	box-shadow 0 1px 1px #fff , inset 0 1px 1px rgba(255,255,255,0.4)
	color #666
	cursor pointer
	font-size 1.4rem
	font-weight bold
	gradient2(#f7f7f7, 0, #e1e1e1, 100%)
	padding 3px 10px 3px
	min-height 28px
	text-align center
	&.tap
		gradient2(#c1c1c1, 0, #d7d7d7, 100%)

.input_text
	vendor(appearance, none)
	background #fff
	vendor(border-radius, 4px)
	border 1px solid #ccc
	box-shadow inset 0 1px 1px #e1e1e1
	font-size 1.4rem
	line-height 1.2
	min-height 28px
	padding 1px 3px
	&[disabled]
		background #f7f7f4
		border none
		box-shadow none
		font-weight bold

// chart
#chart
	overflow hidden
	width 70px
	-webkit-transition: width 1s ease-in-out;
	&:hover
		width 100%
	ul
		font-size 6.0rem
		margin 0 60px
		width 80%
	li
		background #4dac26
		box-shadow 1px 1px 20px rgba(0,0,0,.2)
		height 90px
		margin 50px 0
		position relative
		width 0
		span
			display inline-block
			line-height 90px
			margin 0 20px
			position absolute
			&.value
				left 180px
				font-size 3.2rem
			&.percentage
				left 5px
		
