// container
html
	font-size 62.5%
	min-height 100%

body
	background rgba(0,0,0,.8)
	color #333
	font-family sans-serif
	font-size 1.3rem
	min-height 100%
	&.connected
		background #f7f7f4

// layout
#user
	text-align center
	padding 20px 10px
	.input_text
		margin 0 5px 0 0
		width 70%

#contents
	margin 10px

#index
	text-align center
	margin 10px 0 0
	img
		width 80%

#vote
	ul
		overflow hidden
	li
		float left
		position relative
		text-align center
		width 50%
		.num
			color #4dac26
			display inline-block
			font-family Gill Sans
			font-size 8.0rem
			left 40%
			position absolute
			text-align center
			top 15%
		input
			cursor pointer
			display block
			height 120px
			width 95%

#menu
	button
		margin 20px
		padding 20px
